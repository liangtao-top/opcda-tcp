{
  "autoStart": false,
  "opcda": {
    "host": "localhost",
    "node": "NT6000.eNetOPC.4",
    "type": "Everyone",
    "username": "",
    "password": ""
  },
  "protocols": {
    "msa": {
      "enabled": false,
      "name": "MSA Protocol",
      "description": "Manufacturing System Architecture Protocol",
      "version": "1.0",
      "settings": {
        "mn": 100000000,
        "ip": "117.172.118.16",
        "port": 31100,
        "interval": 10000,
        "heartbeat": 5000,
        "batchSize": 100,
        "retryCount": 3
      }
    },
    "mqtt": {
      "enabled": true,
      "name": "MQTT Protocol",
      "description": "Message Queuing Telemetry Transport",
      "version": "3.1.1",
      "settings": {
        "broker": "mqtt://broker.example.com:1883",
        "clientId": "opcda-gateway",
        "username": "mqtt_user",
        "password": "mqtt_pass",
        "topics": {
          "data": "opcda/data",
          "status": "opcda/status"
