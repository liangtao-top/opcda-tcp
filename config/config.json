        "qos": 1,
        "retain": false,
        "cleanSession": true,
        "keepAlive": 60
      }
    },
    "modbusTcp": {
      "enabled": false,
      "name": "Modbus TCP Protocol",
      "description": "Modbus TCP/IP Communication Protocol",
      "version": "1.0",
      "settings": {
        "ip": "0.0.0.0",
        "port": 502,
        "station": 1,
        "timeout": 5000,
        "retryCount": 3,
        "registerMapping": {
          "OPC的模拟量serveNAOH.02LIA_0701A": 1000,
          "OPC的模拟量serverHCN.LIC033201": 1001,
          "OPC的模拟量serverHCN.LI03102": 1002
        }
      }
    }
  },
  "registers": {
    "OPC的模拟量serveNAOH.02LIA_0701A": "511110066004Q0003QT001",
